<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:fillViewport="true">
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".RoadBookActivity" >
	
	    <ImageView
	        android:id="@+id/book_name_icon"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignBottom="@+id/book_name_text"
	        android:src="@drawable/rbook" />
	
	    <TextView
	        android:id="@+id/book_name_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/book_name_icon"
	        android:text="@string/default_text" 
	        android:textSize="24sp" />
	
	    <TextView
	        android:id="@+id/book_description_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/book_name_text"
	        android:layout_below="@+id/book_name_text"
	        android:layout_marginTop="5dp"
	        android:text="@string/default_text" 
	        android:textSize="18sp" />
	
	    <ImageView
	        android:id="@+id/book_location_icon"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_toLeftOf="@+id/book_location_text"
	        android:layout_alignBottom="@+id/book_location_text"
	        android:src="@drawable/location" />
	
	    <TextView
	        android:id="@+id/book_location_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/book_name_text"
	        android:layout_below="@+id/book_description_text"
	        android:layout_marginTop="20dp"
	        android:text="@string/default_text"
	        android:textSize="20sp" />
	
	    <ImageView
	        android:id="@+id/book_distance_icon"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_toLeftOf="@+id/book_distance_text"
	        android:layout_alignBottom="@+id/book_distance_text"
	        android:src="@drawable/milestone" />
	
	    <TextView
	        android:id="@+id/book_distance_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/book_name_text"
	        android:layout_below="@+id/book_location_text"
	        android:layout_marginTop="20dp"
	        android:text="@string/default_text"
	        android:textSize="20sp" />
	
	    <ImageView
	        android:id="@+id/book_image"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/book_distance_text"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="20dp"
	        android:contentDescription="@string/default_text" />
	
	    <Button
	        android:id="@+id/book_start_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/book_image"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/go" />
	
	</RelativeLayout>
</ScrollView>
